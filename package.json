{
  "name": "openworldcrafter",
  "version": "3.0.2",
  "updateInfo": {
    "url": "https://openworldcrafter.com",
    "message": "v3.0.1 adds snippets and the character chart, along with numerous minor improvements"
  },
  "description": "The Notepad for Authors",
  "main": "src/entry.js",
  "author": "FlyingPiMonster <flyingpimonster@gmail.com> (https://github.com/flyingpimonster)",
  "scripts": {
    "compile-sass": "node-sass --output-style=compressed src/styles/theme_dark.sass resources/styles/theme_dark.css; node-sass --output-style=compressed src/styles/theme_light.sass resources/styles/theme_light.css",
    "compile-icons": "./scripts/compile-icons.js",
    "compile-docs": "./scripts/compile-docs.js",
    "compile-web": "OWC_ORIGIN=\"\" webpack --config webpack/webpack.config.js",
    "compile-app-prod": "./scripts/compile-app-prod.sh",
    "compile-app": "webpack --config webpack/app.webpack.config.js",
    "compile-all": "yarn run compile-sass; yarn run compile-docs; yarn run compile-icons; yarn run compile-web",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist-mac": "electron-builder --mac dmg",
    "dist-linux": "electron-builder --x64 --ia32 --linux rpm deb",
    "dist-linux-mac": "electron-builder --x64 --ia32 --linux rpm deb --mac tar.gz",
    "dist-windows": "electron-builder --win nsis",
    "dist-all": "electron-builder --ia32 --x64 --win nsis --mac tar.gz --linux rpm deb",
    "update-server": "http-server -p 7702 -o"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "copy-webpack-plugin": "^4.0.1",
    "electron": "^1.6.11",
    "electron-builder": "^19.20.1",
    "node-sass": "^4.5.3",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "jszip": "^3.1.3",
    "markdown-it": "^8.3.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-emoji": "^1.4.0",
    "uuid": "^3.1.0"
  },
  "build": {
    "appId": "com.openworldcrafter.desktop",
    "productName": "openworldcrafter",
    "fileAssociations": {
      "ext": "owc",
      "name": "openworldcrafter project"
    },
    "linux": {
      "category": "Office",
      "desktop": {
        "StartupNotify": "true"
      }
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "perMachine": true
    }
  },
  "optionalDependencies": {}
}
